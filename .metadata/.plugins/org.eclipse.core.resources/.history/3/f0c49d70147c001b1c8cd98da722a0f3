#include <stdint.h>
#include <stdio.h>

#define USART3_IRQNO 39


int main(void)
{
	// Manually pend the pending bit for the USART3 Peripheral
	uint32_t *pISPR1 = (uint32_t *)0xE000E204;
	*pISPR1 |= (1 << (USART3_IRQNO % 32));
    /* Loop forever */

	// Enable the USART3 IRQ number in NVIC
	uint32_t *pISER1 = (uint32_t *)0xE000E184;
	*pISER1 |= (1 << (USART3_IRQNO % 32));
	for(;;);
}

